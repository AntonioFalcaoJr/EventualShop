<BSNavbar Color="BSColor.Light">
    <BSContainer Container="Container.Fluid">
        <BSCollapse IsInNavbar="true">
            <Toggler>
                <BSNavbarToggle/>
            </Toggler>
            <Content>
                <BSNav Margin="Margins.Auto">
                    <BSNavItem IsActive="true" Url="catalog">Catalog</BSNavItem>
                    <BSNavItem Url="javascript:void(0);">Link</BSNavItem>
                    <BSNavItem IsDropdown="true">
                        <BSDropdown>
                            <Toggler>
                                <BSToggle IsNavLink="true">Dropdown</BSToggle>
                            </Toggler>
                            <Content>
                                <BSDropdownItem Url="javascript:void(0);">Action</BSDropdownItem>
                                <BSDropdownItem Url="javascript:void(0);">Another action</BSDropdownItem>
                                <BSDropdownItem IsDivider="true"/>
                                <BSDropdownItem Url="javascript:void(0);">Something else here</BSDropdownItem>
                            </Content>
                        </BSDropdown>
                    </BSNavItem>
                    <BSNavItem Url="javascript:void(0);" IsDisabled="true">Disabled</BSNavItem>
                </BSNav>
                <BSNavbarBrand Url="/" Margin="Margins.Auto">ECommerce</BSNavbarBrand>
                <BSNav Margin="Margins.Auto" Class="align-items-center">

                    <BSNavItem IsDropdown="true">
                        <BSDropdown @ref="_dropdownCountry">
                            <Toggler>
                                <BSToggle IsNavLink="true" @onmouseover="_dropdownCountry.ShowAsync">@_country</BSToggle>
                            </Toggler>
                            <Content>
                                @foreach (var country in _countries)
                                {
                                    <BSDropdownItem
                                        IsActive="false"
                                        Url="catalog"
                                        OnClick="() => _country = country">
                                        @country
                                    </BSDropdownItem>
                                }
                                <BSDropdownItem IsDivider="true"/>
                                <BSDropdownItem OnClick="@(() => _country = "All")">All</BSDropdownItem>
                            </Content>
                        </BSDropdown>
                    </BSNavItem>

                    <BSNavItem IsDropdown="true">
                        <BSDropdown @ref="_dropdownCurrency">
                            <Toggler>
                                <BSToggle IsNavLink="true" @onmouseover="_dropdownCurrency.ShowAsync">@_currency</BSToggle>
                            </Toggler>
                            <Content >
                                @foreach (var (key, value) in _currencies)
                                {
                                    <BSDropdownItem
                                        IsActive="false"
                                        Url="catalog"
                                        OnClick="() => _currency = key">
                                        @value
                                    </BSDropdownItem>
                                }
                            </Content>
                        </BSDropdown>
                    </BSNavItem>

                    <BSNavItem IsDropdown="true">
                        <BSDropdown @ref="_dropdownLanguage">
                            <Toggler>
                                <BSToggle IsNavLink="true" @onmouseover="_dropdownLanguage.ShowAsync">@_language</BSToggle>
                            </Toggler>
                            <Content >
                                @foreach (var (key, value) in _languages)
                                {
                                    <BSDropdownItem
                                        IsActive="false"
                                        Url="catalog"
                                        OnClick="() => _language = key">
                                        @value
                                    </BSDropdownItem>
                                }
                            </Content>
                        </BSDropdown>
                    </BSNavItem>

                    <BSNavItem Class="bi bi-cart2" style="font-size: 1.5rem;" IsActive="true" Url="catalog"/>

                </BSNav>
            </Content>
        </BSCollapse>
    </BSContainer>
</BSNavbar>

@code
{
    private static string[] _countries = {"United States", "Canada", "Germany"};
    private static Dictionary<string, string> _currencies = new() {{"USD", "Dollar"}, {"EUR", "Euro"}};
    private static Dictionary<string, string> _languages = new() {{"EN", "English"}, {"FR", "French"}, {"GER", "German"}};

    private string _country = _countries.First();
    private string _currency = _currencies.First().Key;
    private string _language = _languages.First().Key;

    private BSDropdown _dropdownCountry;
    private BSDropdown _dropdownCurrency;
    private BSDropdown _dropdownLanguage;
}